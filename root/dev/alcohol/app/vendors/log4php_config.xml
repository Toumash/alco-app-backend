<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="myFileAppender" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date{Y-m-d H:i:s} [%logger] %message%newline"/>
        </layout>
        <param name="file" value="app/logs/Log.log"/>
    </appender>

    <logger name="default">
        <appender_ref ref="myFileAppender"/>
    </logger>
    <root>
        <level value="DEBUG"/>
        <appender_ref ref="myFileAppender"/>
    </root>
</configuration>